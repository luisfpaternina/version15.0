<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    <record id="form_view_bim_documentation" model="ir.ui.view">
        <field name="name">form.view.bim.documentation</field>
        <field name="model">bim.documentation</field>
        <field name="arch" type="xml">
            <form string="Documents">
                <header>
                    <button name="print_document_notes" string="Notes" type="object"/>
                </header>
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                       <h1>
                           <field name="name" readonly="1"/>
                       </h1>
                    </div>
                    <group>
                        <group>
                            <field name="description" required="1"/>
                            <field name="project_id" options='{"no_create": 1, "no_open": 1}'/>
                        </group>
                        <group>
                            <field name="file_01" filename="file_name"/>
                            <field name="file_name" invisible="1"/>
                            <field name="user_id" readonly="1"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <field name="observations" widget="html"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_tree_bim_documentation" model="ir.ui.view">
        <field name="name">view.tree.bim.documentation</field>
        <field name="model">bim.documentation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
                <field name="file_01" filename="file_name"/>
                <field name="file_name" invisible="1"/>
                <field name="user_id"/>
                <field name="project_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="view_action_bim_documentation">
        <field name="name">Documents</field>
        <field name="res_model">bim.documentation</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create a new record
            </p>
        </field>
    </record>

    <menuitem 
            id="menu_bim_project_documentation"
            name="Documentation"
            parent="menu_bim"
            action="view_action_bim_documentation"/>
        
    
    </data>

</odoo>
