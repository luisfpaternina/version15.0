<?xml version="1.0" encoding="UTF-8"?>     
<odoo>
    <data>

        <record id="view_bim_categ_tree" model="ir.ui.view">
            <field name="name">bim.categ.tree</field>
            <field name="model">bim.categ</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="categ">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_bim_categ_form" model="ir.ui.view">
            <field name="name">bim.categ.form</field>
            <field name="model">bim.categ</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="school">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <table>
                                    <tr>
                                        <td style="padding-right:10px;"><field name="name" required="1" placeholder="Name" /></td>
                                    </tr>
                                </table>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="color" invisible="1"/>
                            </group>
                        </group>
                        <group>
                            
                        </group>
                        <br></br>  
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
    
        <record model="ir.actions.act_window" id="action_view_bim_categ">
            <field name="name">Categories</field>
            <field name="res_model">bim.categ</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create new record
                </p>
            </field>
        </record>

        <menuitem 
            id="menu_bim_categ"
            name="Categories"
            parent="menu_bim_project_settings"
            action="action_view_bim_categ"/>
             
    </data>
</odoo>
