<?xml version="1.0" encoding="UTF-8"?>     
<odoo>
    <data>

        <record id="view_bim_udn_tree" model="ir.ui.view">
            <field name="name">bim.udn.tree</field>
            <field name="model">bim.udn</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_bim_udn_form" model="ir.ui.view">
            <field name="name">bim.udn.form</field>
            <field name="model">bim.udn</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <table>
                                    <tr>
                                        <td style="padding-right:10px;"><field name="name" required="1" placeholder="Name" /></td>
                                    </tr>
                                </table>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="active"/>
                            </group>
                            <group>
                                
                            </group>
                        </group>
                        <br></br>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
    
        <record model="ir.actions.act_window" id="action_view_bim_udn">
            <field name="name">Udn</field>
            <field name="res_model">bim.udn</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create new record
                </p>
            </field>
        </record>

        <menuitem 
            id="menu_bim_udn"
            name="Udn"
            parent="menu_bim_project_settings"
            action="action_view_bim_udn"/>
                   
    </data>
</odoo>
