<?xml version="1.0" encoding="UTF-8"?>     
<odoo>
    <data>

        <record id="view_bim_tree" model="ir.ui.view">
            <field name="name">bim.tree</field>
            <field name="model">bim.bim</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="bim">
                    <field name="name"/>
                    <field name="project_name"/>
                    <field name="partner_id"/>
                    <field name="state"/>
                    <field name="udn_id"/>
                </tree>
            </field>
        </record>

        <record id="view_bim_form" model="ir.ui.view">
            <field name="name">bim.form</field>
            <field name="model">bim.bim</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="school">
                    <header>
                        <field name="state" widget="statusbar" readonly="1"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" name="get_purchases" icon="fa-shopping-cart">
                                <field string="Purchases" name="purchase_count" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="object" name="get_employees" icon="fa-users">
                                <field string="Employees" name="employee_count" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="object" name="get_documents" icon="fa-folder-o">
                                <field string="Documents" name="documents_count" widget="statinfo"/>
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <field name="active" invisible="1"/>
                        <field name="photo" widget="image" class="oe_left oe_avatar"/>
                        <div class="oe_title">
                            <h1>
                                <table>
                                    <tr>
                                        <td style="padding-right:10px;"><field name="name" required="1" placeholder="Name" readonly="1"/></td>
                                    </tr>
                                </table>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="project_name" required="1"/>
                                <field name="partner_id" required="1" options="{'no_create': True, 'no_create_edit':True}"/>
                                <field name="address"/>
                                <field name="partner_type_id" options='{"color_field":"color"}'/>
                            </group>
                            <group>
                                <field name="udn_id" options="{'no_create': True, 'no_create_edit':True}"/>
                                <field name="categ_id" widget="many2many_tags" options='{"color_field":"color"}'/>
                                <field name="departament_id" options='{"color_field":"color"}'/>
                            </group>
                        </group>
                        <group>
                            
                        </group>
                        <br></br><br></br>
                        <notebook colspan="4">
                            <page name="so_page" string="Sales">
                                <group>
                                	<group>
                                		
                                	</group>
                                </group>
                            </page>
                            <page string="Purchase">
                                <group>
                                    <field name="purchase_ids">
                                        <tree>
                                            <field name="name"/>
                                            <field name="partner_id"/>
                                            <field name="state"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                            <page string="Account">
                                <group>
                                    <group>
                                        
                                    </group>
                                </group>
                            </page>
                            <page string="Images">
                                <group>
                                    <group>
                                        <field name="photo1" widget="image"/>
                                    </group>
                                    <group>
                                        <field name="photo2" widget="image"/>
                                    </group>
                                    <group>
                                        <field name="photo3" widget="image"/>
                                    </group>
                                    <group>
                                        <field name="photo4" widget="image"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Stock">
                                <group>
                                    <group>
                                        
                                    </group>
                                </group>
                            </page>
                            <page string="Notes">
                                <group>
                                    <group>
                                        
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
    
        <record model="ir.actions.act_window" id="action_view_bim">
            <field name="name">BIM</field>
            <field name="res_model">bim.bim</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create new record
                </p>
            </field>
        </record>

        <menuitem 
            id="menu_bim"
            name="BIM"
            groups="bim.bim_manager_group"
            web_icon="bim,static/description/icon.png"
            sequence="36"/>

        <menuitem 
            id="menu_bim_project"
            name="BIM project"
            parent="menu_bim"
            action="action_view_bim"/>

        <menuitem 
            id="menu_bim_project_settings"
            name="Settings"
            parent="menu_bim"
            action="action_view_bim"
            sequence="99"/>
                   
    </data>
</odoo>
